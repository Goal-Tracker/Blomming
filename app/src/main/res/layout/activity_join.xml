<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="56dp"
            android:background="#00ff000"
            android:src="@drawable/BacktoLogin">
        </ImageButton>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <EditText
            android:id="@+id/joinEmail"
            android:layout_width="313dp"
            android:layout_height="48dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:text="   이메일"
            android:textColor="#363639"
            android:textSize="13sp"
            android:fontFamily="@font/ko_pub_world_dotum_medium"
            android:background="@drawable/gray_edittext"></EditText>

        <EditText
            android:id="@+id/joinPW"
            android:layout_width="313dp"
            android:layout_height="48dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="40dp"
            android:text="   비밀번호"
            android:textColor="#363639"
            android:textSize="13sp"
            android:fontFamily="@font/ko_pub_world_dotum_medium"
            android:background="@drawable/gray_edittext"></EditText>

        <EditText
            android:id="@+id/joinPWcheck"
            android:layout_width="313dp"
            android:layout_height="48dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="40dp"
            android:text="   비밀번호 확인"
            android:textColor="#363639"
            android:textSize="13sp"
            android:fontFamily="@font/ko_pub_world_dotum_medium"
            android:background="@drawable/gray_edittext"></EditText>

        <ImageButton
            android:id="@+id/joinCheckButton"
            android:layout_width="313dp"
            android:layout_height="48dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="53dp"
            android:background="@drawable/button_round"></ImageButton>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
    </LinearLayout>

</LinearLayout>