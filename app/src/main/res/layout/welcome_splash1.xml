<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#F7F7F7"
    >


    <ImageView
        android:layout_width="220dp"
        android:layout_height="224dp"
        android:layout_gravity="center"
        android:src="@drawable/stamp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:elevation="15dp"
        android:fontFamily="@font/ko_pub_world_dotum_medium"
        android:gravity="center"
        android:text="도장 찍기로 오늘의 목표를 달성해보아요!"
        android:textSize="18sp"
        android:textStyle="bold|normal"
        tools:textColor="@color/main_color" />

    <TextView
        android:layout_width="322dp"
        android:layout_height="73dp"
        android:elevation="15dp"
        android:fontFamily="@font/ko_pub_world_dotum_medium"
        android:gravity="center"
        android:text="목표 달성 여부를 확인할 수 있고, 아직 완료를 하지 않은 친구에게 콕 찌르기를 할 수도 있어요"
        android:textSize="14sp"
        android:textStyle="normal"
        tools:textColor="@color/main_color" />

</LinearLayout>